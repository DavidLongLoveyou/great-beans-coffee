# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/great_beans_coffee?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/great_beans_coffee?schema=public"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Email Configuration (for contact forms and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@greatbeans.com"

# Cloudinary Configuration (for image and document management)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# SEO & Social
NEXT_PUBLIC_SITE_NAME="Great Beans Coffee"
NEXT_PUBLIC_SITE_DESCRIPTION="Premium Vietnamese Coffee Export - B2B Coffee Solutions"
NEXT_PUBLIC_SITE_KEYWORDS="vietnam coffee export, robusta coffee, arabica coffee, private label coffee, coffee wholesale"
NEXT_PUBLIC_SOCIAL_TWITTER="@greatbeanscoffee"
NEXT_PUBLIC_SOCIAL_FACEBOOK="greatbeanscoffee"
NEXT_PUBLIC_SOCIAL_LINKEDIN="company/great-beans-coffee"

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,vi"

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# File Upload Limits
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Cache Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600"

# External APIs
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
WEATHER_API_KEY="your-weather-api-key"

# Security
CORS_ORIGIN="http://localhost:3000"
CSP_REPORT_URI="/api/csp-report"

# Development Tools
ANALYZE_BUNDLE="false"
DISABLE_ESLINT="false"
DISABLE_TYPE_CHECK="false"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Business Configuration
COMPANY_NAME="Great Beans Coffee Export Co., Ltd."
COMPANY_EMAIL="info@greatbeans.com"
COMPANY_PHONE="+84-xxx-xxx-xxxx"
COMPANY_ADDRESS="Ho Chi Minh City, Vietnam"
COMPANY_TAX_ID="0123456789"

# Default Currency and Units
DEFAULT_CURRENCY="USD"
DEFAULT_WEIGHT_UNIT="MT"
DEFAULT_INCOTERMS="FOB"

# RFQ Configuration
RFQ_EXPIRY_DAYS="30"
RFQ_AUTO_ASSIGN="true"
RFQ_NOTIFICATION_EMAIL="sales@greatbeans.com"

# Content Management
CONTENT_PREVIEW_SECRET="your-content-preview-secret"
CONTENT_REVALIDATE_SECRET="your-content-revalidate-secret"